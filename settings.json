{
    // Explorer
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,

    // Window, SideBar and Tabs
    "window.commandCenter": false,
    "workbench.editor.showTabs": "none",
    "workbench.activityBar.location": "bottom",
    "workbench.statusBar.visible": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",

    // Prettier settings
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4,
    "prettier.semi": true,

    // Editor
    "editor.fontFamily": "SF Mono",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.6,
    "editor.letterSpacing": 0,
    "editor.fontLigatures": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "all",
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "editor.lineNumbers": "off", // Number Row
    "editor.showFoldingControls": "never",
    "editor.glyphMargin": false,
    "editor.tabSize": 4,
    "editor.guides.indentation": false,
    "editor.lightbulb.enabled": "off",
    "editor.hover.enabled": "on",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.overviewRulerBorder": false,
    "editor.detectIndentation": false,

    // Terminal
    "terminal.integrated.fontFamily": "SF Mono",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.lineHeight": 1,

    // Brackets settings
    "editor.matchBrackets": "never",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.guides.highlightActiveBracketPair": false,

    // Folder and file settings
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.hidesExplorerArrows": true,
    "workbench.tree.indent": 30,
    "material-icon-theme.activeIconPack": "nest",
    "workbench.tree.renderIndentGuides": "always",
    "material-icon-theme.folders.color": "#909090",
    "workbench.tree.enableStickyScroll": false,
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#fff",
    },

    // Others My own settings
    "window.zoomLevel": 1.5,
    "python.defaultInterpreterPath": "/usr/bin/python3",
    // "editor.mouseWheelZoom": true,
    "editor.formatOnSave": true,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "breadcrumbs.enabled": false,
    "git.decorations.enabled": false,
    "scm.diffDecorations": "none",
    "extensions.ignoreRecommendations": true,
    "workbench.layoutControl.enabled": false,
    "chat.commandCenter.enabled": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "workbench.colorTheme": "Webstorm NewUI Theme",
}
